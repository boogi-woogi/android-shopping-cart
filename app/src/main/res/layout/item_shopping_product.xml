<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.model.ProductUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_add_to_cart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/image_of_product"
            android:src="@drawable/image_add_to_cart"
            android:translationZ="1dp"
            app:layout_constraintBottom_toBottomOf="@id/image_product"
            app:layout_constraintEnd_toEndOf="@id/image_product" />

        <ImageView
            android:id="@+id/image_product"
            android:scaleType="fitXY"
            imageUrl="@{product.imageUrl}"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:contentDescription="@string/image_of_product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/example" />

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="@{product.name}"
            app:layout_constraintEnd_toEndOf="@id/image_product"
            app:layout_constraintStart_toStartOf="@id/image_product"
            app:layout_constraintTop_toBottomOf="@id/image_product"
            tools:text="PET보틀-정사각..." />

        <TextView
            android:id="@+id/text_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/text_product_name"
            app:layout_constraintTop_toBottomOf="@id/text_product_name"
            tools:text="10,000원" />

        <woowacourse.shopping.common.CountPickerView
            android:id="@+id/count_picker"
            android:layout_width="126dp"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/image_product"
            app:layout_constraintEnd_toEndOf="@id/image_product"
            app:layout_constraintStart_toStartOf="@id/image_product" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>