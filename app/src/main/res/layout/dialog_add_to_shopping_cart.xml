<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="314dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/item_round_white">

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="아메리카노" />

        <TextView
            android:id="@+id/text_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/text_product_name"
            app:layout_constraintTop_toBottomOf="@id/text_product_name"
            tools:text="99000원" />

        <LinearLayout
            android:id="@+id/layout_select_product_count"
            android:layout_width="126dp"
            android:layout_height="42dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@id/button_add_to_cart"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/button_minus_product_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_corner_round_button"
                android:text="@string/minus_description" />

            <TextView
                android:id="@+id/text_product_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/initial_count" />

            <Button
                android:id="@+id/button_plus_product_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/right_corner_round_button"
                android:text="@string/plus_description" />

        </LinearLayout>

        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/item_round_cobalt"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>